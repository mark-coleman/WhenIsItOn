@{
    ViewBag.Title = "User Search";
}

<h1>So...when is it on?</h1>

@using (Html.BeginForm("UserSearch", "Home")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Unfortunately is seems that @ViewBag.SearchText is not scheduled to be shown on UK TV in the next two weeks.</h3>
        <h3>However, if you would like to be notified before it is next shown just enter your email address below and we'll let you know.</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.TextBox("email", "", new { @class = "input-lg" })
        @Html.Hidden("title", (string)(@ViewBag.SearchText));
        <input type="submit" value="Save my search" class="btn btn-primary btn-lg" />
    </div>
}

<div>
    @Html.ActionLink("Home", "Index")
</div>
